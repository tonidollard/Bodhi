{%- style -%}
  .section-{{ section.id }}-padding {
    padding-top: {{ section.settings.padding_top_mobile | times: 0.75 | round: 0 }}px;
    padding-bottom: {{ section.settings.padding_bottom_mobile | times: 0.75 | round: 0 }}px;
  }

  .section-{{ section.id }}-margin {
    margin-top: {{ section.settings.margin_top_mobile | times: 0.75 | round: 0 }}px;
    margin-bottom: {{ section.settings.margin_bottom_mobile | times: 0.75 | round: 0 }}px;
  }

  @media screen and (min-width: 750px) {
    .section-{{ section.id }}-padding {
      padding-top: {{ section.settings.padding_top }}px;
      padding-bottom: {{ section.settings.padding_bottom }}px;
    }

    .section-{{ section.id }}-margin {
        margin-top: {{ section.settings.margin_top }}px;
        margin-bottom: {{ section.settings.margin_bottom }}px;
    }
  }
{%- endstyle -%}

{%- if section.settings.button_label != blank -%}
    <div class="page-width">
    <div class="section--button section-{{ section.id }}-padding section-{{ section.id }}-margin">
        <div class="section--button-inner">
            <div class="section--button-wrapper">
                <a {% if section.settings.button_link == blank %} role="link" aria-disabled="true"{% else %} href="{{ section.settings.button_link }}"{% endif %} class="button button--{{ section.settings.section_button_style }}">
                {{ section.settings.button_label | escape }}
                {% render 'icon-arrow-minimal' %}
                </a>
            </div>
        </div>
    </div>
    </div>  
{%- endif -%}

{% schema %}
    {
        "name": "Section button", 
        "settings": [
            {
                "type": "select",
                "id": "section_button_style",
                "label": "Section button style",
                "options": [
                  {
                    "value": "primary",
                    "label": "Primary"
                  },
                  {
                    "value": "secondary",
                    "label": "Secondary"
                  },
                  {
                    "value": "primary-accent",
                    "label": "Primary accent"
                  },
                  {
                    "value": "primary-inverted",
                    "label": "Primary inverted"
                  },
                  {
                    "value": "primary-outline",
                    "label": "Primary outline"
                  }
                ],
                "default": "primary"
            },
            {
                "type": "text",
                "id": "button_label",
                "default": "Button label",
                "label": "Section button label",
                "info": "t:sections.image-banner.blocks.buttons.settings.button_label_1.info"
            },
            {
                "type": "url",
                "id": "button_link",
                "label": "Section button link"
            },
            {
                "type": "header",
                "content": "Section Spacing"
            },
            {
                "type": "range",
                "id": "padding_top",
                "min": 0,
                "max": 100,
                "step": 4,
                "unit": "px",
                "label": "t:sections.all.padding.padding_top",
                "default": 0
            },
            {
                "type": "range",
                "id": "padding_bottom",
                "min": 0,
                "max": 100,
                "step": 4,
                "unit": "px",
                "label": "t:sections.all.padding.padding_bottom",
                "default": 0
            },
            {
                "type": "range",
                "id": "margin_top",
                "min": 0,
                "max": 100,
                "step": 4,
                "unit": "px",
                "label": "Margin top",
                "default": 0
            },
            {
                "type": "range",
                "id": "margin_bottom",
                "min": 0,
                "max": 100,
                "step": 4,
                "unit": "px",
                "label": "Margin bottom",
                "default": 0
            },
            {
                "type": "header",
                "content": "Mobile"
            },
            {
                "type": "range",
                "id": "padding_top_mobile",
                "min": 0, 
                "max": 100,
                "step": 4,
                "unit": "px",
                "label": "t:sections.all.padding.padding_top",
                "default": 0
            },
            {
                "type": "range",
                "id": "padding_bottom_mobile",
                "min": 0,
                "max": 100,
                "step": 4,
                "unit": "px",
                "label": "t:sections.all.padding.padding_bottom",
                "default": 0
            },
            {
                "type": "range",
                "id": "margin_top_mobile",
                "min": 0,
                "max": 100,
                "step": 4,
                "unit": "px",
                "label": "Margin top",
                "default": 0
            },
            {
                "type": "range",
                "id": "margin_bottom_mobile",
                "min": 0,
                "max": 100,
                "step": 4,
                "unit": "px",
                "label": "Margin bottom",
                "default": 0
            }
        ],
        "presets": [
            {
              "name": "Section button"
            }
        ]
    }
{% endschema %}